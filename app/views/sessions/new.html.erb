<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password, params[:password] %>
  </div>

  <br />

  <div class="actions"><%= submit_tag "Log in", class: "pure-button pure-button-primary" %></div>
<% end %>


